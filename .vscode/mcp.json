{
  "$schema": "./mcp.schema.json",
  "mcpServers": {
    "shadcn": {
      "command": "npx",
      "args": ["shadcn@latest", "mcp"]
    },
    "chrome-devtools": {
      "command": "npx",
      "args": [
        "-y",
        "chrome-devtools-mcp@latest",
        "--headless=true",
        "--isolated=true",
        "--channel=stable"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--browser=chrome",
        "--headless",
        "--isolated",
        "--ignore-https-errors",
        "--timeout-action=5000",
        "--timeout-navigation=60000"
      ]
    }
  }
}
